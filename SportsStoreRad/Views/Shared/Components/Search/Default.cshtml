@model ProductListViewModel

<div class="modal-dialog modal-lg" role="document">
    <div class="w-100 pt-1 mb-5 text-right">
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
    </div>
    <form asp-controller="Product" asp-action="List" class="modal-content modal-body border-0 p-0">
        <div class="input-group mb-2">
            <input asp-for="@Model.Filter.Name" type="text"
                   class="form-control" id="inputModalSearch" placeholder="Пошук ...">
            <button type="submit" value="@Model.Filter" name="filter" class="input-group-text bg-success text-light">
                <i class="fa fa-fw fa-search text-white"></i>
            </button>
        </div>
    </form>
</div>
